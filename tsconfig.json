{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "outDir": "game/script",
        "rootDir": "src",
        "newLine": "CRLF",
        "sourceMap": false
    },
    "exclude": [
        "node_modules",
        "script"
    ],
    "filesGlob": [
        "./src/**/*.ts",
        "./node_modules/@akashic/akashic-engine/lib/main.d.ts",
        "./node_modules/@akashic-extension/akashic-animation/lib/@akashic-extension/akashic-animation.d.ts",
        "node_modules/atsumaru-gameapi/build/index.d.ts"
    ],
    "files": [
        "src/mainScene.ts",
        "node_modules/@akashic/akashic-engine/lib/main.d.ts",
        "node_modules/@akashic-extension/akashic-animation/lib/@akashic-extension/akashic-animation.d.ts",
        "node_modules/atsumaru-gameapi/build/index.d.ts"
    ]
}
